<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if content_for?(:title)%>
        <%= yield(title) %>
      <% else %>
        Ticketee
      <% end %>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="flash" id='<%= key %>'>
        <%= value %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
